@startuml

object ludoteca {
    monitorRecepcion = lydia
    monitorJuego = aisha
    pizarraDelSalon = pizarraSalon
}

object lydia {
    colaNiños = colaEsperando
    estaJugando = false
    niñoTurno = null
}

