    colaNiños = colaJugando
    estaJugando = true
    niñoTurno = niño1
}

object colaEsperando {
    niños = [esperando1, esperando2, esperando3]
    niñosEnCola = 3
}

object colaJugando {
    niños = [niño1, niño2, niño3, niño4, niño5, niño6]
    niñosEnCola = 6
